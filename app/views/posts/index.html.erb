 <head>
  <%= stylesheet_link_tag 'application.css' %>
</head>

<div>
  <div class="parent-container">
    <div class="user-image">
      <img src=<%= @user.photo %> width="75rem">
    </div>

    <div class="user-details">
      <h1><%= @user.name %></h1>
      <p>Number of post: <%= @user.posts_counter %></p>
    </div>
  </div>

  <% @user.posts.each do |post| %>
  <div class="post">
    <h2>Post: <%= link_to post.title, user_post_path(@user, post) %></h2>
    <p class="post-text"><%= post.text %> </p>
    <p class="post-comments-likes">
      comments : <%= post.comments_counter %>
      likes : <%= post.likes_counter %>
    </p>
  </div>

  <div class="comment-container">
    <% post.five_recent_post.each do |comment| %>
    <div>
      <p><%= comment.author.name %> : <%= comment.text %></p>
    </div>
    <% end %>
  </div>

  <% end %>
  <a class="all-posts page">pagination</a>
</div>